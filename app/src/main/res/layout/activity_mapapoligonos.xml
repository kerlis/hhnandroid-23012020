            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/option_bulletin_notice"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
